
# See /usr/share/doc/ncmpcpp/examples/bindings.gz for more

def_key "j"
  scroll_down
def_key "k"
  scroll_up

def_key "J"
  page_down
def_key "K"
  page_up

def_key "g"
  move_home
def_key "G"
  move_end

# effectively swapped the defaults:
def_key "n"
    next_found_item
def_key "N"
    previous_found_item
def_key ","
    move_sort_order_down
def_key ","
    move_selected_items_down
def_key "."
    move_sort_order_up
def_key "."
    move_selected_items_up


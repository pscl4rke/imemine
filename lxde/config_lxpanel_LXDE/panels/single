    widthtype=percent
    width=100
    height=24
    transparent=1
    tintcolor=#818288
    alpha=218
    autohide=0
    heightwhenhidden=2
    setdocktype=1
    setpartialstrut=1
    usefontcolor=1
    fontsize=10
    fontcolor=#000000

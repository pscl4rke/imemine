/* Based upon global configuration file for html2ps */

@html2ps {
  package {
    ImageMagick: 1;
    PerlMagick: 1;
    TeX: 1;
    Ghostscript: 1;
    check: weblint;
    libwww-perl: 1;
    path: "/usr/bin";
  }
  paper {
    /* Need this to stop it using "letter" and having massive margins */
    type: a4;
  }
  hyphenation {
    en {
      file: "/usr/share/texmf-texlive/tex/generic/hyphen/hyphen.tex";
    }
  }
  option {
    underline: 1;
  }
}


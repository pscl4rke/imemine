#!/bin/bash
#======================================================================#
# SURFRAW SEARCH PROMPTER                        (c) 2015 P. S. Clarke #
#======================================================================#

[ -z "$1" ] && zenity --error --text="Missing arg" && exit 1
elvus="$1"

desc="$(surfraw -elvi | grep ^$elvus | sed 's/.*-- //')"
query="$(zenity --entry --text="$desc" --title="$1")"
[ -z "$query" ] && echo Cancelled && exit 0

surfraw $elvus $query


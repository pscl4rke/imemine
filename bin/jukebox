#!/usr/bin/env bash
#======================================================================#
# MPD ALBUM SELECTOR                             (c) 2012 P. S. Clarke #
#======================================================================#

album="$(mpc list album | shuf | sed 's/Disc .*$//' | dmenu)"
[ -z "$album" ] && exit 1
mpc clear
mpc search album "$album" | mpc add
mpc play

